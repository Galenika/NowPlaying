<UserControl x:Class="NowPlaying.UI.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NowPlaying.UI"
             mc:Ignorable="d" Height="60.724" Width="111.375">
    <Viewbox>
        <Grid HorizontalAlignment="Left" Width="112">
            <Rectangle x:Name="SwitchBackground" Fill="#FFFF4040" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="111" RadiusY="30" RadiusX="30" MouseLeftButtonDown="Background_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="46" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="7,7,0,0"/>
        </Grid>
    </Viewbox>
</UserControl>
