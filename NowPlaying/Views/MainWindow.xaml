<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NowPlaying.Views;assembly=NowPlaying"
        xmlns:vm="clr-namespace:NowPlaying.ViewModels;assembly=NowPlaying"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="NowPlaying.Views.MainWindow"
        HasSystemDecorations="False"
        Title="NowPlaying">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding PlayedSeconds}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <local:Switch x:Class="NowPlaying.Views.Switch" Width="110" Height="60" />
    </StackPanel>
</Window>
